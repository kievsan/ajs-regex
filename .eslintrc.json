{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "import/extensions": [
            "error",
            "ignorePackages"
        ],
        "linebreak-style": ["error", "windows"],
        "allowForLoopAfterthoughts": 0   // допускает унарные операторы ++-- в for
            // 0 = off, 1 = warn, 2 = error
   }
}
